<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/imageActivityBackground">


    <View
        android:id="@+id/viewBackGroundBottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bottomBackGround"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/StudentData"
        android:textColor="@color/greenBlack"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonLeonardo"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/outline_home_24"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnBernal"
        app:layout_constraintHorizontal_bias="1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewBackGroundBottom"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/descriptionLeonardoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leonardo"
        android:textColor="@color/greenBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/buttonLeonardo"
        app:layout_constraintStart_toStartOf="@id/buttonLeonardo"
        app:layout_constraintTop_toBottomOf="@id/buttonLeonardo" />

    <ImageButton
        android:id="@+id/imgBtnBernal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/outline_home_24"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonLeonardo"
        app:layout_constraintTop_toTopOf="@+id/viewBackGroundBottom" />

    <TextView
        android:id="@+id/descriptionBernalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bernal"
        android:textAlignment="center"
        android:textColor="@color/greenBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgBtnBernal"
        app:layout_constraintStart_toStartOf="@id/imgBtnBernal"
        app:layout_constraintTop_toBottomOf="@id/imgBtnBernal" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="descriptionLeonardoButton" />



</androidx.constraintlayout.widget.ConstraintLayout>